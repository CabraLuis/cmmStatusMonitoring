---
import Navbar from "../../components/Navbar";
import ProdOpsModule from "../../components/prod/ProdOpsModule";
import Layout from "../../layouts/Layout.astro";

let value;

if (Astro.cookies.has("area")) {
  const cookie = Astro.cookies.get("area");
  value = cookie?.value;
}

---

<Layout title="Nueva WorkOrder">
  <Navbar client:load />
  <ProdOpsModule area={value} client:load />
</Layout>
